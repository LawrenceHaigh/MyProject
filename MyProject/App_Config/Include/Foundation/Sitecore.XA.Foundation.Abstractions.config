<?xml version="1.0" encoding="utf-8" ?>
<!--

Purpose: This include file enables and configures the Sitecore Abstractions foundation module.

The Extensions foundation module improves the general authoring experience. 

To disable this file, change its extension to ".disabled".

-->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
    <sitecore>
        <services>
            <register serviceType="Sitecore.XA.Foundation.Abstractions.IContext, Sitecore.XA.Foundation.Abstractions" implementationType="Sitecore.XA.Foundation.Abstractions.Context, Sitecore.XA.Foundation.Abstractions" lifetime="Singleton"/>
            <register serviceType="Sitecore.XA.Foundation.Abstractions.IPageDesigner, Sitecore.XA.Foundation.Abstractions" implementationType="Sitecore.XA.Foundation.Abstractions.PageDesigner, Sitecore.XA.Foundation.Abstractions" lifetime="Singleton"/>
            <register serviceType="Sitecore.XA.Foundation.Abstractions.IPageMode, Sitecore.XA.Foundation.Abstractions" implementationType="Sitecore.XA.Foundation.Abstractions.PageMode, Sitecore.XA.Foundation.Abstractions" lifetime="Singleton"/>
        </services>
    </sitecore>
</configuration>