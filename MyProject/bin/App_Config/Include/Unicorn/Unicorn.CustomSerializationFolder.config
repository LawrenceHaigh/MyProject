<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
	<sitecore>
		<unicorn>			
			<defaults>
				<targetDataStore type="Rainbow.Storage.SerializationFileSystemDataStore, Rainbow">
					<patch:attribute name="physicalRootPath">C:\inetpub\wwwroot\MyProject.local\App_Data\$(configurationName)</patch:attribute>
				</targetDataStore>
			</defaults>
		</unicorn>

    <settings>
      <setting name="Rainbow.SFS.SerializationFolderPathMaxLength">
        <patch:attrivute name="value">150</patch:attrivute>
      </setting>
    </settings>
	</sitecore>
</configuration>
